<h1> You are booking <%= @booking.listing.user.first_name %></h1>
<%= form_tag listing_booking_payments_path(@booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@booking.total_amount) %></span>
    </label>
  </article>


  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My booking"
    data-email="<%= current_user.email %>"
    data-description="booking <%= @booking.listing.user.first_name %>"
    data-amount="<%= @booking.total_amount_pennies %>"
    data-currency="<%= @booking.total_amount.currency %>"></script>

<% end %>
