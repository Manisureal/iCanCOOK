<div class="container change-me">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1>Create a Listing...</h1>

      <%= simple_form_for @listing do |f| %>
      <h2>Availability</h2>
        <%= f.input :dates, as: :string, required: false, input_html: {class: "datepicker"}, placeholder: "Select date" %>

      <h2>Type of Events to Cater</h2>
           <%= f.input :events, as: :check_boxes, collection: Listing::EVENTS, label_html: {class: "state"}, input_html: { class: "pretty p-default" }  %>
      <h2>About yourself</h2>
        <%= f.input :description %>
        <%= f.input :experience %>
        <%= f.input :speciality %>
      <h2>Account Details</h2>
        <%= f.input :sort_code %>
        <%= f.input :account_number %>
      <h2>Address Details</h2>
        <%= f.input :line1 %>
        <%= f.input :line2 %>
        <%= f.input :city %>
        <%= f.input :postcode %>
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>

