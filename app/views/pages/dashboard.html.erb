<div class="banner" style="height: 50vh; background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1490474418585-ba9bad8fd0ea?auto=format&fit=crop&w=2100&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
  <div class="banner-content">
    <h1><%= @user.first_name %>'s Dashboard</h1>
  </div>
</div>

<div class="wrapper-body-dashboard">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <figure class="dashboard-user">
          <%= image_tag "https://source.unsplash.com/collection/1016/800x500", id: "logo" %>
          <figcaption>
            <%= cl_image_tag @user.photo, class: "profile", width: 120, height: 120, crop: :thumb %>
            <h2><span> User info: </span></h2>
            <p><%= @user.first_name %></p>
            <p><%= @user.surname %></p>
            <p><%= @user.email %></p>
            <%= link_to "Edit details", edit_user_registration_path, class: "follow" %>
          </figcaption>
        </figure>
      </div>

      <div class="col-xs-12 col-sm-8">
        <div class="box">
          <div class="booking-dashboard">
            <h2><i class="fa fa-calendar-check-o" aria-hidden="true"></i> My bookings </h2>
            <% @bookings.each do |booking| %>
            <div class="message">
              <%= cl_image_tag booking.listing.user.photo, class: "profile", width: 80, height: 80, crop: :thumb %>
              <div class="message-name">
                <h3><%= booking.listing.user.first_name %></h3>
                <p><%= booking.booking_date %></p>
              </div>
              <div class="message-body">
                <p><strong> Booked for: <%= booking.duration %> hrs</strong></p>
                <p><%= booking.listing.description %></p>
              </div>
              <div class="message-status">

                <p class="status pending"><%# booking.status.capitalize %></p>
                <p class="price">£ <%= booking.total_amount %></p>

              </div>
              <div class="view-more">
                <%= link_to "View", dashboard_path, class: "btn-medium" %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>



  <!-- BUYER -->
    <% listing = Listing.where(user_id: current_user.id) %>
    <% if listing.empty? %>

    <div class="row">
      <div class="be-a-cook">
        <div class="col-xs-12 col-md-4">
          <div class="text-center">
            <i class="fa fa-search icon-home" aria-hidden="true"></i>
            <h3> Enjoy it </h3>
            <p class="home-text">Be creative, cook your own thing, cooking is an art</p>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <div class="text-center">
            <i class="fa fa-search icon-home" aria-hidden="true"></i>
            <h3> Earn money </h3>
            <p class="home-text">This is a great opportunity for you to earn money doing what you love</p>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <div class="text-center">
            <i class="fa fa-cutlery icon-home" aria-hidden="true"></i>
            <h3> Get social </h3>
            <p class="home-text">Get to know great people at local events and have fun</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="cook-button">
        <%= link_to "I want to become a cook", new_listing_path, class: "btn-treehouse" %>
      </div>
    </div>


  <!-- CHEF -->
    <% else %>

      <div class="row">
        <div class="listing-header">
          <h2>Your listing:</h2>
        </div>
      </div>

      <div class="row">
        <div class="availability-cards">
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="availability-card">
              <h2><i class="fa fa-calendar" aria-hidden="true"></i> Your availability</h2>
              <ul style="list-style: none;" class="dates-list">
                <% @listings.last.dates.each do |date| %>
                  <li class="date"><%= date %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="availability-card">
              <h2><i class="fa fa-money" aria-hidden="true"></i> Price/ h</h2>
              <p class="number-paragraph">£<%= @listings.last.price_amount_pennies %></p>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="availability-card">
              <h2><i class="fa fa-check-square" aria-hidden="true"></i> Last booked</h2>
              <p class="number-paragraph-date"><%= @last_booking.booking_date %></p>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="availability-card">
              <h2><i class="fa fa-line-chart" aria-hidden="true"></i> # of bookings</h2>
              <p class="number-paragraph"><%= @nb_booking %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="availability-card-info">
          <div class="col-xs-12 col-md-6">
            <div class="col-xs-12">
              <div class="info-row">
                <p><strong>Description: </strong><%= @listings.last.description %></p>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="info-row">
                <p><strong>Experience: </strong><%= @listings.last.experience %></p>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="info-row">
                <p><strong>Specialty: </strong><%= @listings.last.speciality %></p>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="info-row">
                <p><strong>Events: </strong><%= @listings.last.events %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>


