<div class="banner" style="height: 50vh; background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1490474418585-ba9bad8fd0ea?auto=format&fit=crop&w=2100&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
  <div class="banner-content">
    <h1><%= @user.first_name %>'s Dashboard</h1>
  </div>
</div>

<div class="wrapper-body-dashboard">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="box">
          <div class="dash-avatar">
            <img src='https://kitt.lewagon.com/placeholder/users/s' />
          </div>
            <h1 class="text-center"><%= @user.first_name %></h1>
        </div>
      </div>

      <div class="col-xs-12 col-sm-8">
        <div class="box">
          <div class="booking-dashboard">
            <h2 class="text-center"> My bookings </h2>
            <% @bookings.each do |booking| %>
            <div class="message">
              <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
              <div class="message-name">
                <h3><%= booking.listing.user.first_name %></h3>
                <p><%= booking.booking_date %></p>
              </div>
              <div class="message-body">
                <p><strong> Booked for: <%= booking.duration %> hrs</strong></p>
                <p>
                  <%= booking.listing.description %>
                </p>
              </div>
              <div class="message-status">
                <p class="status pending"><%= booking.status.capitalize %></p>
                <p class="price">Â£ <%= booking.total_price %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




