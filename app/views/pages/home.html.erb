<% content_for(:navbar_class, "navbar-home") %>

<div class="banner">
  <div class="banner-content text-center">
    <h1>Welcome to iCanCook</h1>
    <p>Find local cooks for any occasion</p>
    <%= form_tag(listings_path, method: :get) do %>
    <%= text_field_tag :query, params[:search], :placeholder => "Enter your postcode", style: "color:  black;", class: "form-control" %>
     <%= submit_tag 'Search', :name => nil, class: "btn btn-primary", style: "margin-top: 10px;" %>
    <% end %>
  </div>
</div>

<div class="wrapper-home">
  <div class="container">
    <div style="margin-bottom: 50px; margin-top: 40px;">
      <h2 class="text-center"> How it works </h2>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="text-center">
          <i class="fa fa-user-circle icon-home" aria-hidden="true"></i>
          <h3> Search </h3>
          <p class="home-text">Search for available cooks in your local area</p>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="text-center">
          <i class="fa fa-search icon-home" aria-hidden="true"></i>
          <h3> Book </h3>
          <p class="home-text">Book your chosen cook for a specific date and communicate via messages</p>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="text-center">
          <i class="fa fa-cutlery icon-home" aria-hidden="true"></i>
          <h3> Relax </h3>
          <p class="home-text">Your cook will handle the cooking so you can focus on what really matters at your event</p>
        </div>
      </div>
    </div>
  </div>
</div>




<div>
  <i class="fa fa-quote-left" aria-hidden="true"></i>
  <h2>Become a cook</h2>
  <p>Meet Sarah</p>
  <%= image_tag "sarah.jpg", class: "avatar" %>
  <p>Sarah joined ICanCook in November 2017. She has been cooking since she was a child and has helped friends at their events. She loved the fact that she could do this full time via ICanCook and has not looked back since. "I love meeting different people via the platform and earning money for a hobby that I have always loved!"</p>
</div>




